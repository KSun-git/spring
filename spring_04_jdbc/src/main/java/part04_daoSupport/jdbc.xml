<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                              http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- [1] DataSource 빈 선언 -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" >
        <property name="driverClassName" value="oracle.jdbc.OracleDriver" />
        <property name="url" value="jdbc:oracle:thin://@192.168.106.1:2000:orcl" />
        <property name="username" value="hr" />
        <property name="password" value="oracle4U" />
    </bean>
    
<!-- [2] SqlSessionFactoryBean 빈 선언 -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name = "dataSource" ref="dataSource" />
        
        <!--택1)Mapper.xml 단독사용가능--> 
        <property name = "mapperLocations">
            <list>
                <value>classpath:part04_daoSupport/memMapper.xml</value>
            </list>
        </property>
         
        
        <!-- 택2)Configuration.xml 사용 -->
        <!-- <property name="configLocation" value="classpath:config/configuration.xml" /> -->
         
    </bean>

<!-- Template안쓰고 daoSupport로 사용하겠습니다! -->
<!-- [3] SqlSessionTemplate 빈 선언 -->
    <!-- <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg ref="sqlSessionFactory" />
    </bean> -->
    
<!-- [4] MemDaoImp 빈 선언 -->
    <bean id="dao" class="part04_daoSupport.MemDaoImp">
        <property name="sqlSessionFactory" ref="sqlSessionFactory" />
    </bean>

    
</beans>
